---
import { Resource } from "sst";
import Layout from "../../layouts/base.astro";
import { createClient } from "@openauthjs/openauth/client";
import type { AstroCookieSetOptions } from "astro";

const client = createClient({
  issuer: Resource.Urls.auth,
  clientID: "console"
});

const code = Astro.url.searchParams.get("code");
const challenge_verifier = Astro.url.searchParams.get("challenge_verifier");
if (code && challenge_verifier) {
  console.log("code", code);
  const redirect_uri = Astro.url.origin + "/auth/callback";
  console.log("redirect uri", redirect_uri);
  const cookieOptions: AstroCookieSetOptions = {
    path: "/",
    sameSite: "lax",
    secure: false, // Only send cookies over HTTPS
    httpOnly: true, // Prevent JavaScript access to cookies
    expires: new Date(Date.now() + 24 * 10 * 60 * 60 * 1000) // expires in like 10 days
  };

  const tokens = await client.exchange(code, redirect_uri, challenge_verifier);
  console.log("tokens", tokens);
  if (!tokens.err) {
    const access_token = tokens.tokens.access;
    const refresh_token = tokens.tokens.refresh;

    Astro.cookies.set("access_token", access_token, cookieOptions);
    Astro.cookies.set("refresh_token", refresh_token, cookieOptions);

    Astro.redirect("/home", 308);
  }
}
const error = Astro.url.searchParams.get("error");
if (!error && !code) Astro.redirect("/", 308);
---

<Layout>
  <div class="size-full flex justify-center items-center">
    {
      error ? (
        <p class="text-2xl font-mona font-semibold">
          An error occurred while authenticating you&nbsp;{error}
        </p>
      ) : code ? (
        <span class="text-2xl font-semibold font-mona flex items-center gap-2">
          <svg
            class="size-6 animate-spin"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
          >
            <>
              <circle
                class="opacity-25"
                cx="12"
                cy="12"
                r="10"
                stroke="currentColor"
                stroke-width="4"
              />
              <path
                class="opacity-75"
                fill="currentColor"
                d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
              />
            </>
          </svg>
          We are confirming your identity...
        </span>
      ) : (
        <p class="text-2xl font-semibold font-mona flex items-center gap-2">
          Something went wrong
        </p>
      )
    }
  </div>
</Layout>
